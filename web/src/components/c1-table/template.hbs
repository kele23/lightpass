<div class="">
    <div class="flex flex-col md:flex-row justify-between md:items-center">
        <div class="flex flex-row items-center">
            {{#if title}}<h2 class="font-semibold text-lg mr-4 dark:text-white">{{title}}</h2>{{/if}}
            {{#unless hideCount}}
                <div
                    class="flex items-center justify-center font-semibold p-2 text-gray-600 bg-white rounded-full shadow hover:text-gray-700 text-md shrink-0 w-10 h-10"
                    ref="count"
                > {{rowsHtmls.length}} </div>
            {{/unless}}
        </div>
        {{#if filterKey}}
            <form class="mt-4 md:mt-0 flex flex-col md:flex-row mb-0" ref="filter">
                <div class="relative">
                    <input
                        type="text"
                        id="&quot;form-subscribe-Filter"
                        class="rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white dark:bg-black text-gray-700 dark:text-gray-100 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-gray-600 dark:focus:ring-gray-100 focus:border-transparent"
                        name="filter"
                        placeholder="Filtra..."
                    />
                </div>
                <button
                    class="self-end mt-1 md:mt-0 md:ml-1 flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-gray-500 rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-200"
                    type="submit"
                >
                    Filtra
                </button>
            </form>
        {{/if}}
    </div>
    <div class="py-4 overflow-x-auto">
        <div class="inline-block min-w-full overflow-hidden rounded-lg shadow">
            <table class="min-w-full leading-normal table-auto" ref="printTable">
                <thead>
                    <tr>
                        {{#each labels}}
                            <th
                                scope="col"
                                class="px-2 py-3 text-sm text-left text-gray-800 uppercase bg-white border-b border-gray-200 font-semibold"
                            >
                                {{this}}
                            </th>
                        {{/each}}
                        {{#unless actionDisabled}}
                            <th
                                scope="col"
                                class="px-2 py-3 text-sm font-semibold text-gray-800 uppercase bg-white border-b border-gray-200 text-right"
                            >
                                Azioni
                            </th>
                        {{/unless}}
                    </tr>
                </thead>
                <tbody ref="tbody">
                    {{#each rowsHtmls}}
                        {{{this}}}
                    {{/each}}
                </tbody>
            </table>
            {{#if pagination}}
                <div class="flex flex-col items-center px-5 py-5 bg-white xs:flex-row xs:justify-between">
                    <div class="flex items-center">
                        <button
                            type="button"
                            class="w-full p-4 text-base text-gray-600 bg-white border rounded-l-xl hover:bg-gray-100"
                            data-value="prev"
                            ref="pageBtn"
                        >
                            <svg
                                width="9"
                                fill="currentColor"
                                height="8"
                                class=""
                                viewBox="0 0 1792 1792"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M1427 301l-531 531 531 531q19 19 19 45t-19 45l-166 166q-19 19-45 19t-45-19l-742-742q-19-19-19-45t19-45l742-742q19-19 45-19t45 19l166 166q19 19 19 45t-19 45z"
                                >
                                </path>
                            </svg>
                        </button>
                        {{#each pagination}}
                            <button
                                type="button"
                                class="w-full px-4 py-2 text-base text-indigo-500 bg-white border-t border-b hover:bg-gray-100"
                                data-value="{{value}}"
                                ref="pageBtn"
                            >
                                {{label}}
                            </button>
                        {{/each}}
                        <button
                            type="button"
                            class="w-full p-4 text-base text-gray-600 bg-white border-t border-b border-r rounded-r-xl hover:bg-gray-100"
                            data-value="next"
                            ref="pageBtn"
                        >
                            <svg
                                width="9"
                                fill="currentColor"
                                height="8"
                                class=""
                                viewBox="0 0 1792 1792"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M1363 877l-742 742q-19 19-45 19t-45-19l-166-166q-19-19-19-45t19-45l531-531-531-531q-19-19-19-45t19-45l166-166q19-19 45-19t45 19l742 742q19 19 19 45t-19 45z"
                                >
                                </path>
                            </svg>
                        </button>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>