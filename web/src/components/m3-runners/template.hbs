<div class="lg:flex w-full">
    <div class="w-full lg:w-2/3 lg:pr-2">
        <c1-table
            labels="ID,Nome,Numero,Categoria"
            keys="id,name,number,category"
            filterKey="name"
            orderBy="number"
            ref="table"
        ></c1-table>
    </div>
    <div class="w-full lg:w-1/3">

        <form class="bg-white rounded-lg shadow sm:max-w-md sm:w-full sm:mx-auto sm:overflow-hidden" ref="createRunner">
            <div class="px-4 py-8 sm:px-10">
                <div class="relative mt-6">
                    <div class="relative flex justify-center text-base leading-5 font-semibold">
                        <span class="px-2 text-gray-500 bg-white">
                            Nuovo Corridore
                        </span>
                    </div>
                </div>
                <div class="mt-6">
                    <div class="w-full space-y-6">
                        <div class="w-full">
                            <div class="relative">
                                <input
                                    type="text"
                                    class="rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-gray-600 focus:border-transparent"
                                    required
                                    placeholder="Nome"
                                    name="name"
                                />
                            </div>
                        </div>
                        <div class="w-full">
                            <div class="relative">
                                <input
                                    type="text"
                                    class="rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-gray-600 focus:border-transparent"
                                    placeholder="Numero"
                                    required
                                    name="number"
                                    pattern="[0-9]+"
                                />
                            </div>
                        </div>
                        <div class="w-full">
                            <div class="relative">
                                <input
                                    type="text"
                                    class="rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-gray-600 focus:border-transparent"
                                    placeholder="Categoria"
                                    required
                                    name="category"
                                />
                            </div>
                        </div>
                        <div class="w-full">

                            <button
                                class="w-full px-4 py-2 text-base font-semibold text-white bg-gray-500 rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-200"
                                type="submit"
                            >
                                Crea
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </form>

        <form class="bg-white rounded-lg shadow sm:max-w-md sm:w-full sm:mx-auto sm:overflow-hidden" ref="uploadRunner">
            <div class="px-4 py-8 sm:px-10">
                <div class="relative mt-6">
                    <div class="relative flex justify-center text-base leading-5 font-semibold">
                        <span class="px-2 text-gray-500 bg-white">
                            Carica Corridori
                        </span>
                    </div>
                </div>
                <div class="mt-6">
                    <div class="w-full space-y-6">
                        <div class="w-full">
                            <div class="relative">
                                <input
                                    type="file"
                                    class="rounded-lg flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-gray-600 focus:border-transparent"
                                    placeholder="File"
                                    required
                                    name="file"
                                    pattern="[0-9]+"
                                />
                            </div>
                        </div>
                        <div class="w-full">

                            <button
                                class="w-full px-4 py-2 text-base font-semibold text-white bg-gray-500 rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-200"
                                type="submit"
                            >
                                Carica
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </form>

        <div class="bg-white rounded-lg shadow sm:max-w-md sm:w-full sm:mx-auto sm:overflow-hidden">
            <div class="px-4 py-8 sm:px-10">
                <div class="mt-6">
                    <div class="w-full space-y-6">
                        <div class="w-full">
                            <button
                                class="w-full px-4 py-2 text-base font-semibold text-white bg-gray-500 rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-200"
                                type="button"
                                ref="download"
                            >
                                Scarica CSV
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>