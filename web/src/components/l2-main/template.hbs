<main class="relative h-screen overflow-hidden bg-gray-100 dark:bg-gray-800">
    <div class="flex items-start justify-between">
        <div
            class="-left-80 lg:left-0 transition-all absolute lg:relative h-screen shadow-lg lg:block w-80 z-50 shrink-0"
            ref="drawerMenu"
        >
            <div class="h-full bg-white dark:bg-gray-700">
                <div class="flex items-center justify-start pt-6 ml-8">
                    <p class="text-2xl font-bold dark:text-white">
                        Lighpass V2
                    </p>
                </div>
                <c2-nav ref="nav"></c2-nav>
            </div>
        </div>
        <div class="flex flex-col w-full space-y-2 md:space-y-4">
            <header class="z-40 flex items-center justify-between w-full h-16">

                <div class="flex flex-col justify-end h-full px-3 lg:hidden">
                    <div class="relative flex items-center justify-end w-full p-1 space-x-4">
                        <button
                            class="flex items-center p-2 text-gray-500 bg-white rounded-full shadow text-md"
                            ref="menuBtn"
                        >
                            <svg
                                class="w-6 h-6"
                                class="text-gray-400"
                                fill="currentColor"
                                viewBox="0 0 1792 1792"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M1664 1344v128q0 26-19 45t-45 19h-1408q-26 0-45-19t-19-45v-128q0-26 19-45t45-19h1408q26 0 45 19t19 45zm0-512v128q0 26-19 45t-45 19h-1408q-26 0-45-19t-19-45v-128q0-26 19-45t45-19h1408q26 0 45 19t19 45zm0-512v128q0 26-19 45t-45 19h-1408q-26 0-45-19t-19-45v-128q0-26 19-45t45-19h1408q26 0 45 19t19 45z"
                                >
                                </path>
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="relative z-20 flex flex-col justify-end h-full px-3 md:w-full">
                    <div class="relative flex items-center justify-end w-full p-1 space-x-4">
                        <div class="text-gray-700 dark:text-gray-100" ref="currentTime"></div>
                        <button
                            class="flex items-center p-2 text-red-600 bg-white rounded-full shadow hover:text-gray-700 text-md"
                            title="Chiudi Gara"
                            ref="closeRace"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                                class="w-6 h-6"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z"
                                    clip-rule="evenodd"
                                />
                            </svg>

                        </button>

                    </div>
                </div>
            </header>
            <div class="h-screen px-4 pb-24 overflow-auto md:px-6">
                <h1 class="text-4xl font-semibold text-gray-800 dark:text-white mb-4" ref="dashboardTitle">
                    {{location.title}}
                </h1>
                <div ref="dashboardContent">
                    {{{location.content}}}
                </div>
            </div>
        </div>
    </div>
    <c3-confirm name="default"></c3-confirm>
</main>