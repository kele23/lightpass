<div class="flex flex-wrap w-full">
    <div class="flex flex-col w-full md:w-1/2 justify-center">
        <div class="flex flex-col justify-center px-8 pt-8 my-4 md:pt-0 md:px-24 lg:px-32">
            <p class="text-3xl text-center">
                Selezione una Gara
            </p>
            <form class="flex flex-col pt-3" ref="selectRace">
                <div class="flex flex-col pt-4 pb-4">
                    <div class="flex relative">

                        <select
                            class="w-full block px-3 py-2 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
                            name="name"
                        >
                            <option value="">
                                Seleziona una gara
                            </option>
                            {{#each options}}
                                <option value="{{id}}">
                                    {{name}}
                                </option>
                            {{/each}}
                        </select>

                    </div>
                </div>
                <button
                    type="submit"
                    class="w-full px-4 py-2 text-base font-semibold text-white bg-gray-500 rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-200"
                >
                    <span class="w-full">
                        Seleziona
                    </span>
                </button>
            </form>
        </div>
        <div class="flex items-center justify-center">
            <hr class="w-16" />
            <div class="px-5">O</div>
            <hr class="w-16" />
        </div>
        <div class="flex flex-col justify-center px-8 pt-8 my-4 md:pt-0 md:px-24 lg:px-32">
            <p class="text-3xl text-center">
                Crea una Gara
            </p>
            <form class="flex flex-col pt-3 md:pt-8" ref="createRace">
                <div class="flex flex-col pt-4 pb-4">
                    <div class="flex relative">
                        <input
                            type="text"
                            class="flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            name="name"
                            placeholder="es: E Ben Sa Ghe 2023"
                        />
                    </div>
                </div>
                <button
                    class="flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-gray-500 rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-200"
                    type="submit"
                >
                    <span class="w-full">
                        Crea
                    </span>
                </button>
            </form>
        </div>
    </div>
    <div class="w-1/2 shadow-2xl">
        <img class="hidden object-cover w-full h-screen md:block" src="{{img}}" />
    </div>
</div>